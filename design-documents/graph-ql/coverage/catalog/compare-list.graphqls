type ComparableItem {
    productId: ID!
    name: String!
    sku: String!
    priceRange: ProductPriceRange!
    url: ProductUrl
    images: [ProductImage]
    values: [ProductAttribute]
}

type ComparableIndicator {
    code: String!
    title: String!
}

type CompareList {
    items: [ComparableItem]
    indicators: [ComparableIndicator]
}

type Customer{
    compareList: CompareList
}

type Query {
    getCompareListForCustomer(customerId: ID): CompareList
    getCompareListById(id: ID): CompareList
}

type Mutation {
    addItemsToCompareList(
        id: ID!
        items: [ID!]
    ): CompareList
    removeItemsFromCompareList(
        id: ID!
        items: [ID!]
    ): CompareList
    clearList(id: ID!): Boolean
}

schema {
    query: Query,
    mutation: Mutation
}